<div class="jumbotron">
  <h2><%=post.title%></h2>
  <p>   <%=post.author%></p>
  <p>   <%= post.content %></p>
  <p>Votes: <%= post.votes %></p>

  <form class="+1" method="post" action="/posts/vote/<%=post._id%>?_method=PATCH" >
    <input  type="submit" value="+1" >
  </form>

  <form class="delete-button" method="post" action="/posts/delete/<%=post._id%>?_method=DELETE" >
    <input  type="submit" value="delete" >
  </form>

  <p><a href= "/posts/edit/<%=post._id%>">Edit</a></p>

</div>
    
        

<form action="/posts/comment/<%=post._id%>?_method=PATCH" method='post'>
    <input id='comment' name='post[comment][]' type='text' placeholder='comment'/>
    <input type="submit">
</form>
        
<table class="table table-striped">
    <thead>
    <tr>
        <th>Comments</th>
    </tr>
<% post.comments.forEach(function (comment){ %>
    <tr>
        <td><%= comment %></td>
      </tr>
<% }) %>
    </thead>