<div class="jumbotron">
  <h2><%=post.title%></h2>
  <p>   <%=post.author%></p>
  <p>   <%= post.content %></p>
  <p>Votes: <%= post.votes %></p>
    <div class="all-the-things">
        <form class="+1" method="post" action="/posts/vote/<%=post._id%>?_method=PATCH" >
            <input  type="submit" value="+1" class="btn btn-default" >
        </form>

        <form class="delete-button" method="post" action="/posts/delete/<%=post._id%>?_method=DELETE" >
            <input  type="submit" class="btn btn-default" value="Delete" >
        </form>

        <a href= "/posts/edit/<%=post._id%>" class="btn btn-default">Edit</a>
    </div>
</div>
    
        

<form action="/posts/comment/<%=post._id%>?_method=PATCH" method='post'>
    <input id='comment' name='post[comment][]' type='text' placeholder='comment'/>
    <input type="submit" class="btn btn-default">
</form>
        
<table class="table table-striped">
    <thead>
    <tr>
        <th>User</th>
        <th>Comment</th>
    </tr>
<% post.comments.forEach(function (comment){ %>
    <tr>
        <td><%= comment.author %></td>
        <td><%= comment.comment %></td>
      </tr>
<% }) %>
    </thead>